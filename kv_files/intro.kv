#:kivy 2.0.0

<IntroScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: 40
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # Latar belakang putih
            Rectangle:
                pos: self.pos
                size: self.size

        RoundedImageButton:
            source: 'assets/logo.png'
            size_hint: (1, 1)

        Label:
            text: "Selamat Datang Di\nAplikasi Pendukung Pertanian Desa"
            font_size: 26
            color: 0, 0, 0, 1  # Warna teks hitam untuk keterbacaan
            font_name: 'assets/fonts/Atop.ttf'  # Tentukan path ke file font Anda
            size_hint_x: None  # Agar lebar label dapat ditentukan
            width: self.parent.width * 0.8  # Menentukan lebar label
            halign: 'center'  # Mengatur teks agar rata tengah
            text_size: self.size  # Mengatur ukuran teks sesuai ukuran label
            pos_hint: {"center_y": 0.7}  # Menggeser label 40% ke atas
            padding: 50

        RoundedButton:
            text: "NEXT"
            size_hint: (1, 0.1)
            on_press: root.go_to_login()

<RoundedImageButton@ButtonBehavior+Image>:
    source: ''
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # Warna latar belakang tombol
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [50, 50, 50, 50]  # Sudut yang melengkung

<RoundedButton@Button>:
    background_normal: ''  # Menghapus latar belakang default
    background_color: 1, 0.8, 0.2, 1  # Warna oranye tertentu
    font_size: 18
    color: (0, 0, 0, 1)
    canvas.before:
        Color:
            rgba: self.background_color  # Menggunakan warna tombol
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [30, 30, 30, 30]  # Sudut yang melengkung